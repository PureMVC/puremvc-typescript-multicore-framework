{
  "compilerOptions": {
    "target": "ES2017",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "declarationDir": "bin/types",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["docs", "node_modules", "bin", "test"],
  "typedocOptions": {
    "entryPoints": ["src/index.ts"],
    "out": "docs"
  }
}
